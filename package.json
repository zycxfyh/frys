{
  "name": "frys",
  "version": "1.0.0",
  "description": "frys Production - 企业级工作流管理系统",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "frys": "src/index.js"
  },
  "scripts": {
    "start": "node src/index.js --server",
    "dev": "node --watch src/index.js --server",
    "example": "node src/index.js --example",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit/",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,md}\" \"package.json\"",
    "build": "node scripts/build.js",
    "clean": "rm -rf node_modules pnpm-lock.yaml dist coverage test-results && pnpm install"
  },
  "keywords": [
    "workflow",
    "lightweight",
    "modular",
    "devops"
  ],
  "author": "frys Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/frys.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/frys/issues"
  },
  "homepage": "https://github.com/your-username/frys#readme",
  "dependencies": {
    "@fastify/swagger": "^9.5.2",
    "@sentry/node": "^7.74.1",
    "@sentry/profiling-node": "^1.2.6",
    "awilix": "^8.0.1",
    "axios": "^1.4.0",
    "bull": "^4.10.4",
    "cors": "^2.8.5",
    "eventemitter3": "^5.0.1",
    "express": "^4.21.2",
    "fastify": "^5.6.1",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "pg": "^8.16.3",
    "uuid": "^9.0.0",
    "ws": "^8.18.3",
    "zod": "^4.1.12",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@biomejs/biome": "^1.5.3",
    "@playwright/test": "^1.40.0",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.0",
    "@testcontainers/postgresql": "^11.8.0",
    "@testcontainers/redis": "^11.8.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/coverage-istanbul": "^4.0.7",
    "cross-env": "^10.1.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.26.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^11.0.3",
    "lefthook": "^2.0.2",
    "prettier": "^3.0.0",
    "testcontainers": "^11.8.0",
    "vitest": "^4.0.7",
    "zx": "^7.2.3"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "no-console": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
